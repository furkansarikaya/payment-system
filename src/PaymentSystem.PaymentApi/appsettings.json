{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "PaymentSystem": "Debug",
      "PaymentSystem.Security": "Information"
    }
  },
  "AllowedHosts": "*",
  "Urls": "https://localhost:7000;http://localhost:5076",
  "JsonKeyStore": {
    "KeyStoreFilePath": "keys/payment-keys.json",
    "RefreshIntervalMinutes": 30,
    "RequestTimeoutMinutes": 5,
    "DefaultEnvironment": "development"
  },
  "Security": {
    "RequireApiKey": true,
    "RequireHttps": true,
    "ChallengeTimeoutMinutes": 5,
    "EnableSignatureValidation": true,
    "EnableAnomalyDetection": true,
    "AuditLogLevel": "Information",
    "RateLimiting": {
      "PaymentRequestsPerMinute": 10,
      "PublicKeyRequestsPerMinute": 100,
      "ChallengeRequestsPerMinute": 30,
      "AdminRequestsPerMinute": 5
    },
    "AnomalyDetection": {
      "LowRiskThreshold": 0.3,
      "MediumRiskThreshold": 0.6,
      "HighRiskThreshold": 0.8,
      "EnableMachineLearning": true,
      "BlockCriticalRisk": true
    },
    "ApiKeys": {
      "Demo": {
        "Key": "ak_test_payment_demo_12345",
        "Name": "Demo Payment Client",
        "Environment": "development",
        "RateLimit": {
          "RequestsPerMinute": 60,
          "RequestsPerHour": 1000,
          "RequestsPerDay": 10000
        },
        "Permissions": [
          "payment.process",
          "payment.query",
          "challenge.request"
        ]
      },
      "Production": {
        "Key": "ak_live_production_67890",
        "Name": "Production Client",
        "Environment": "production",
        "AllowedIPs": [
          "192.168.1.100",
          "10.0.0.50"
        ],
        "RateLimit": {
          "RequestsPerMinute": 100,
          "RequestsPerHour": 5000,
          "RequestsPerDay": 50000
        },
        "Permissions": [
          "payment.process",
          "payment.query",
          "challenge.request",
          "admin.view"
        ]
      }
    },
    "RequireClientCertificate": true,
    "EnableCertificatePinning": true,
    "TrustedCertificateAuthorities": [
      "54143402D9DBBB4B76DB35A5C5FA4BF86010CD1B"
    ],
    "PinnedCertificates": {
      "high_security_client_1": "383CE4F0B2BBB7617AF67508E9510ADC3BE1E63F",
      "financial_client_bank": "99945834715773F0A21A3B9E44188E642F424D2C"
    },
    "AuthorizedClients": [
      "high_security_client_1",
      "financial_client_bank",
      "enterprise_client_corp",
      "demo_client"
    ],
    "CertificateValidation": {
      "CheckRevocation": true,
      "RequireValidChain": true,
      "AllowSelfSigned": false,
      "CacheValidationResults": true,
      "ValidationCacheTtlMinutes": 10
    }
  },
  "Compliance": {
    "PciDssLevel": 1,
    "EnableGdprMode": true,
    "AuditRetentionDays": 2555,
    "DataMaskingEnabled": true,
    "EncryptionRequired": true
  },
  "Performance": {
    "MaxConcurrentRequests": 1000,
    "RequestTimeoutSeconds": 30,
    "CacheExpirationMinutes": 60,
    "EnableCompression": true,
    "EnableResponseCaching": false
  },
  "Monitoring": {
    "EnableHealthChecks": true,
    "EnableMetrics": true,
    "EnableTracing": true,
    "AlertThresholds": {
      "ErrorRatePercent": 5,
      "ResponseTimeMs": 1000,
      "SecurityViolationsPerHour": 10
    }
  }
}