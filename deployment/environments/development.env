# Development Environment Configuration

# Application
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=https://+:443;http://+:80

# Key Store
JsonKeyStore__KeyStoreFilePath=/app/keys/payment-keys.json
JsonKeyStore__RefreshIntervalMinutes=5
Environment=development

# Logging
Logging__LogLevel__Default=Debug
Logging__LogLevel__Microsoft=Information
Logging__LogLevel__PaymentSystem=Debug

# Application Insights (Development)
ApplicationInsights__ConnectionString=InstrumentationKey=dev-key
ApplicationInsights__EnableAdaptiveSampling=false
ApplicationInsights__DeveloperMode=true

# Client API
PaymentApi__BaseUrl=https://payment-api:443
PaymentApi__TimeoutSeconds=30
