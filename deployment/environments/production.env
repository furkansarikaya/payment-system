# Production Environment Configuration

# Application
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=https://+:443;http://+:80

# Key Store
JsonKeyStore__KeyStoreFilePath=/secure/keys/payment-keys.json
JsonKeyStore__RefreshIntervalMinutes=60
Environment=production

# Logging
Logging__LogLevel__Default=Information
Logging__LogLevel__Microsoft=Warning
Logging__LogLevel__PaymentSystem=Information

# Application Insights (Production)
ApplicationInsights__ConnectionString=InstrumentationKey=prod-key
ApplicationInsights__EnableAdaptiveSampling=true
ApplicationInsights__MaxTelemetryItemsPerSecond=20
ApplicationInsights__SamplingPercentage=10.0

# Client API
PaymentApi__BaseUrl=https://payment-api:443
PaymentApi__TimeoutSeconds=45
PaymentApi__RetryCount=3

# Security
AllowedHosts=*.yourdomain.com
RequireHttpsMetadata=true