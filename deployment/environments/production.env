# Production Environment Configuration - Enhanced Security

# Application
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=https://+:443;http://+:80

# Key Store - Production Security
JsonKeyStore__KeyStoreFilePath=/secure/keys/payment-keys.json
JsonKeyStore__RefreshIntervalMinutes=60
JsonKeyStore__RequestTimeoutMinutes=3
Environment=production

# Enhanced Security Configuration
Security__RequireApiKey=true
Security__RequireHttps=true
Security__ChallengeTimeoutMinutes=3
Security__EnableSignatureValidation=true
Security__EnableAnomalyDetection=true
Security__AuditLogLevel=Information

# Rate Limiting - Production Values
Security__RateLimiting__PaymentRequestsPerMinute=5
Security__RateLimiting__PublicKeyRequestsPerMinute=50
Security__RateLimiting__ChallengeRequestsPerMinute=15
Security__RateLimiting__AdminRequestsPerMinute=2

# Anomaly Detection - Production Settings
Security__AnomalyDetection__LowRiskThreshold=0.25
Security__AnomalyDetection__MediumRiskThreshold=0.5
Security__AnomalyDetection__HighRiskThreshold=0.75
Security__AnomalyDetection__EnableMachineLearning=true
Security__AnomalyDetection__BlockCriticalRisk=true

# Compliance - Production Requirements
Compliance__PciDssLevel=1
Compliance__EnableGdprMode=true
Compliance__AuditRetentionDays=2555
Compliance__DataMaskingEnabled=true
Compliance__EncryptionRequired=true

# Performance - Production Optimized
Performance__MaxConcurrentRequests=500
Performance__RequestTimeoutSeconds=15
Performance__CacheExpirationMinutes=30
Performance__EnableCompression=true
Performance__EnableResponseCaching=true

# Logging - Production Level
Logging__LogLevel__Default=Information
Logging__LogLevel__Microsoft=Warning
Logging__LogLevel__PaymentSystem=Information
Logging__LogLevel__PaymentSystem.Security=Information

# Monitoring - Production Alerts
Monitoring__EnableHealthChecks=true
Monitoring__EnableMetrics=true
Monitoring__EnableTracing=true
Monitoring__AlertThresholds__ErrorRatePercent=2
Monitoring__AlertThresholds__ResponseTimeMs=500
Monitoring__AlertThresholds__SecurityViolationsPerHour=5

# Application Insights - Production
ApplicationInsights__ConnectionString=InstrumentationKey=prod-key-here
ApplicationInsights__EnableAdaptiveSampling=true
ApplicationInsights__MaxTelemetryItemsPerSecond=10
ApplicationInsights__SamplingPercentage=5.0

# Client API Configuration
PaymentApi__BaseUrl=https://payment-api.yourdomain.com
PaymentApi__TimeoutSeconds=15
PaymentApi__RetryCount=2
PaymentApi__ClientId=prod_client
PaymentApi__EnableSignatures=true

# Security Headers
AllowedHosts=*.yourdomain.com
RequireHttpsMetadata=true